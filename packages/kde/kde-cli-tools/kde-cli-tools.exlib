require kde.org [ kde_major_version='5' ]

SUMMARY="Collection of cli tools for KDE"

LICENCES="Artistic GPL-2"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
        kde-frameworks/kcmutils:5
        kde-frameworks/kconfig:5
        kde-frameworks/kconfigwidgets:5
        kde-frameworks/kcoreaddons:5
        kde-frameworks/kdelibs4support:5
        kde-frameworks/kdesu:5
        kde-frameworks/ki18n:5
        kde-frameworks/kiconthemes:5
        kde-frameworks/kio:5
        kde-frameworks/kwidgetsaddons:5
        kde-frameworks/kwindowsystem:5
        x11-libs/libX11
        x11-libs/qtsvg:5[>=5.3.0]
        x11-libs/qtx11extras:5[>=5.3.0]
        !kde/kde-runtime[-kf5-coinstall]
"

# Tries to connect to X
RESTRICT=test

if ! ever is_scm ; then
    # Translations collide with kde-l10n:4. Disable them unconditionally
    # until we solve this.
    CMAKE_SRC_CONFIGURE_PARAMS+=( -DBUILD_po:BOOL=FALSE )
fi

