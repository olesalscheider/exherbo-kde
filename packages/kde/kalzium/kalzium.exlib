require kde.org

SUMMARY="Periodic Table of Elements"

LICENCES="GPL-2 FDL-1.2"
MYOPTIONS="
    3dviewer [[ description = [ Build the molecule editor ] ]]
    solver [[ description = [ Build the equation solver ] ]]
"

DEPENDENCIES="
    build:
        3dviewer? ( sci-libs/eigen:2[>=2.0.3] )

    build+run:
        kde/kdelibs:${SLOT}[>=4.6.80]
        x11-libs/qt:4[opengl]
        3dviewer? (
            sci-chemistry/avogadro[>=1.0]
            sci-chemistry/openbabel[>=2.2]
        )
        solver? (
            dev-lang/ocaml
            dev-ml/facile
        )
        
        !kde/kdeedu [[
            description = [ ${PN} is no longer part of kdeedu in future KDE SC releases ]
            resolution = uninstall-blocked-after
        ]]
"

CMAKE_SRC_CONFIGURE_OPTION_WITHS+=(
    '3dviewer Avogadro'
    '3dviewer Eigen2'
    '3dviewer OpenBabel2'
    'solver OCaml'
    'solver Libfacile'
)

