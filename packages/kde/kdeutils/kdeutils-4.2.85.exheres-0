MY_KDE_PARTS+="kdelirc"

require kdeutils-4

PLATFORMS="~amd64 ~x86"

DEPENDENCIES="
    build+run:
        kde/kdelibs-experimental:4.3    [[ note = [ LibKNotificationItem-1 for kgpg, kwallet ] ]]
        kde_parts:ark? ( app-arch/xz )
        kde_parts:okteta? ( app-crypt/qca:2 [[ note = [ Needed for most of the algorithms of the checksum tool ] ]] )
"

DEFAULT_SRC_PREPARE_PATCHES=( "${FILES}/${PNV}-xdg-compliance.patch" )
CMAKE_SRC_CONFIGURE_OPTION_WITHS+=(
    'kde_parts:ark ZLIB'
    'kde_parts:ark BZip2'
    'kde_parts:ark LibLZMA'
)
