require kde.org [ git=false ]

SUMMARY="Simple Toys for KDE4"
DESCRIPTION="
amor: Amusing Misuse Of Resources put's comic figures above your windows
kteatime: system tray applet that makes sure your tea doesn't get too strong
ktux: Tux-in-a-Spaceship screen saver
"

LICENCES="GPL-2 FDL-1.2 LGPL-2.1"

MY_KDE_PARTS="amor kteatime ktux"
MYOPTIONS="kde_parts: ( ${MY_KDE_PARTS} ) [[ number-selected = at-least-one ]]"

DEPENDENCIES="
    build+run:
        kde/kdelibs:${SLOT}[>=${PV}]
        kde_parts:amor? (
            x11-libs/libX11
            x11-libs/libXext
        )
"

if ever at_least 4.6.41; then
    DEPENDENCIES+="
        build+run:
            kde_parts:ktux? ( kde/kde-workspace:${SLOT}[>=${PV}] [[ note = KScreensaver ]] )
    "
else
    DEPENDENCIES+="
        build+run:
            kde_parts:ktux? ( kde/kdebase-workspace:${SLOT}[>=${PV}] [[ note = KScreensaver ]] )
    "
fi

