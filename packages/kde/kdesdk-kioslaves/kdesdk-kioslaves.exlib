SUMMARY="KDE SDK kioslaves"

LICENCES="GPL-2 LGPL-2.1
    BSD-3 [[ note = [ cmake scripts ] ]]"
MYOPTIONS="subversion"

DEPENDENCIES="
    build+run:
        dev-lang/perl:*[>=5.10] [[ description = [ For kio_perldoc ] ]]
        kde/kdelibs:${SLOT}
