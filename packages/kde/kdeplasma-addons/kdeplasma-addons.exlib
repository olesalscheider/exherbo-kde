require kde.org

SUMMARY="Addons for plasma"
DESCRIPTION="
KDE Plasmoids module is a collection of additional Plasma data engines and widgets (applets).
"

LICENCES="GPL-2"
MY_KDE_PARTS="kdeobservatory"
MYOPTIONS+="
    kimpanel  [[ description = [ Build kimpanel: multibyte input widget ] ]]
    marble    [[ description = [ Needed for a desktop globe wallpaper for Plasma ] ]]
    qalculate [[ description = [ Build qalculate applet ] ]]
    kde_parts: ${MY_KDE_PARTS}
"

DEPENDENCIES+="
    build:
        dev-lang/python:*
        sci-libs/eigen:2[>=2.0.3]
    build+run:
        app-crypt/qca:2 [[ note = [ dataengines/microblog/ ] ]]
        dev-libs/attica[>=0.1.1]
        dev-libs/boost
        kde/kdepimlibs:${SLOT}[>=${PV}]
        kde/qimageblitz[>=0.0.4]
        x11-dri/mesa
        x11-libs/libX11
        x11-libs/libXrender
        x11-libs/qt:4[opengl][webkit]
        x11-misc/shared-mime-info[>=0.18]
        kde_parts:kdeobservatory? ( x11-libs/qwt )
        qalculate? ( sci-libs/libqalculate )
"

CMAKE_SRC_CONFIGURE_OPTION_WITHS+=(
    Marble
    Qalculate
)
CMAKE_SRC_CONFIGURE_PARAMS+=(
    -DWITH_KDE4Workspace:BOOL=TRUE
    -DWITH_KdepimLibs:BOOL=TRUE
    -DWITH_Kexiv2:BOOL=TRUE
    -DWITH_LibAttica:BOOL=TRUE
    -DWITH_Nepomuk:BOOL=ON
    -DWITH_OpenGL:BOOL=TRUE
    -DWITH_QCA2:BOOL=TRUE
)

# We need to hardcode KDE4Workspace_DIR because switching from kde-4.6 to
# kde-4.7, the uninstall of kdebase-workspace is sometimes after the
# kdeplasma-addons' installation. In that case kdeplasma-addons will pick up
# the wrong dir ( to be more specific it will pick up
# /usr/${LIBDIR}/cmake/KDE4Workspace-4.6.5/ )
if ever at_least 4.7.1; then
    CMAKE_SRC_CONFIGURE_PARAMS+=( -DKDE4Workspace_DIR:STRING=/usr/${LIBDIR}/cmake/KDE4Workspace/ )

    DEPENDENCIES+="
        build+run:
            kde/kde-workspace:${SLOT}[>=${PV}]
            kde/kdelibs:${SLOT}[>=4.7.0]
            kde/libkexiv2:${SLOT}[>=${PV}] [[ note = [ Automatic rotation of the frame applet ] ]]
            marble? ( kde/marble:4 )
    "
else
    DEPENDENCIES+="
        build+run:
            kde/kdebase-workspace:${SLOT}[>=${PV}]
            kde/kdegraphics:${SLOT}[>=${PV}] [[ note = [ Needs libkexiv2 for automatic rotation of the frame applet ] ]]
            kde/kdelibs:${SLOT}[>=4.6.0]
            marble? ( kde/kdeedu:4[kde_parts:marble] )
    "
fi

if ever at_least 4.8.0; then
    LICENCES+=" BSD-2"
    DEPENDENCIES+="
        build+run:
            x11-libs/dbusmenu-qt
            kimpanel? ( inputmethods/ibus )
    "
    # Hard disable the scim backend, since scim upstream is dead, prefer the newer ibus backend if
    # kimpanel has been aktivated
    CMAKE_SRC_CONFIGURE_PARAMS+=( -DBUILD_scim=Off )
    CMAKE_SRC_CONFIGURE_OPTION_BUILDS+=( 'kimpanel ibus' )
else
    DEPENDENCIES+="
        build+run:
            kimpanel? ( inputmethods/scim[>=1.4] )
    "
    CMAKE_SRC_CONFIGURE_OPTION_WITHS+=( 'kimpanel SCIM' )
fi

