kde_blocker_dependencies() {
    local parent block=()
    while [[ -n $@ ]]; do
        case "${1}" in
            ${CATEGORY}/${PN}:)
                shift
                while [[ -n ${1} && ${1} != *: ]]; do
                    block+=( ${1} )
                    shift
                done
                DEPENDENCIES+="
                    build+run:
                        ( ${block[@]/#/!} ) [[
                            *description = [ ${CATEGORY}/${PN} has been split into these packages in newer releases ]
                            *resolution = uninstall-blocked-after
                        ]]
                "
                return
                ;;
            *:)
                parent=${1%:}
                ;;
            ${CATEGORY}/${PN})
                DEPENDENCIES+="
                    build+run:
                        !${parent} [[
                            description = [ ${CATEGORY}/${PN} was part of ${parent} in previous releases ]
                            resolution = uninstall-blocked-after
                        ]]
                "
                return
                ;;
        esac
        shift
    done
}
kde_blocker_dependencies ${KDE_BLOCKERS}

kde.org_src_install() {
    cmake_src_install

    local f d
    for f in "${WORK}"/"${KDE_APPS_PREFIX:-.}"/*/README*; do
        [[ -s ${f} ]] || continue
        d=$(dirname "${f}")
        newdoc "${f}" "README.${d##*/}"
    done
}

