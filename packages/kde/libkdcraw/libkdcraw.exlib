require kde.org

SUMMARY="A C++ interface around LibRaw library used to decode RAW picture files"

LICENCES="GPL-2"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
        kde/kdelibs:${SLOT}[>=${PV}]
