require kde.org

SUMMARY="Image viewer for KDE "
HOMEPAGE="http://gwenview.sourceforge.net/"

LICENCES="FDL-1.2 GPL-2"
MYOPTIONS="kipi [[ description = [ Provides various image manipulation and export features via KDE Image Plugin Interface (KIPI) ] ]]"

DEPENDENCIES="
    build+run:
        dev-libs/soprano
        graphics/exiv2[>=0.19]
        kde/kde-baseapps:4[>=${PV}] [[ note = [ libkonq is required ] ]]
        kde/kactivities:4[>=4.9.90]
        kde/kdelibs:${SLOT}[>=4.7.0] [[ note = [ nepomuk ] ]]
        media-libs/jpeg
        media-libs/lcms2
        media-libs/libpng
        media-libs/phonon
        kipi? ( graphics/digikam )
"

if ever at_least 4.10.90 ; then
    DEPENDENCIES+="
        build+run:
            dev-libs/soprano
            kde/nepomuk-core
    "
fi

CMAKE_SRC_CONFIGURE_OPTION_WITHS=( 'Kipi' )

