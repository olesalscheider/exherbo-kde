DEPENDENCIES="
    build+run:
        graphics/exiv2[>=0.19]
        media-libs/jpeg
        media-libs/lcms2
        media-libs/libpng:=
        kde/kde-baseapps:4[>=scm]
        kde-frameworks/baloo:5
        kde-frameworks/kactivities:5
