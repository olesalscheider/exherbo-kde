Date: Wed, 22 Apr 2009 17:08:39 +0000
Subject: [PATCH] Prevent cmake from failing if polkit-qt is not found

git-svn-id: svn://anonsvn.kde.org/home/kde/trunk/extragear/multimedia/k3b@957664 283d02a7-25f6-0310-bc7c-ecb5cbfe19da
---
 cmake/modules/FindPolkitQt.cmake |    2 +-
 1 files changed, 1 insertions(+), 1 deletions(-)

diff --git a/cmake/modules/FindPolkitQt.cmake b/cmake/modules/FindPolkitQt.cmake
index c8531ac..bf3980a 100644
--- a/cmake/modules/FindPolkitQt.cmake
+++ b/cmake/modules/FindPolkitQt.cmake
@@ -25,7 +25,7 @@ if (NOT POLKITQT_MIN_VERSION)
   set(POLKITQT_MIN_VERSION "0.9.0")
 endif (NOT POLKITQT_MIN_VERSION)
 
-pkg_search_module( POLKITQT REQUIRED polkit-qt )
+pkg_search_module( POLKITQT polkit-qt )
 
 if (POLKITQT_FOUND)
     if (POLKITQT_VERSION VERSION_LESS POLKITQT_MIN_VERSION)
