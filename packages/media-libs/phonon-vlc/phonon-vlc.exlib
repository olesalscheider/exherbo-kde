require cmake [ api=2 ]

myexparam phonon_ver

MY_PN=phonon-backend-vlc
MY_PNV=${MY_PN}-${PV}

SUMMARY="A VLC-based phonon backend"
HOMEPAGE="https://projects.kde.org/projects/kdesupport/phonon/phonon-vlc/"
DOWNLOADS="mirror://kde/stable/phonon/${MY_PN}/${PV}/src/${MY_PNV}.tar.xz"

LICENCES="LGPL-3"
SLOT="0"
MYOPTIONS=""

DEPENDENCIES="
    build:
        app-arch/xz
        kde/automoc4[>=0.9.86]
    build+run:
        media/vlc[>=1.1.10][dbus]
        media-libs/phonon[>=$(exparam phonon_ver)]
        x11-libs/qt:4[>=4.4.0][dbus][phonon]
"

CMAKE_SOURCE="${WORKBASE}"/${MY_PNV}

