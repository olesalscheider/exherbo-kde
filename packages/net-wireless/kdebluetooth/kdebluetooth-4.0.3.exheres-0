MY_PNV=${PN}${PV%%.*}-${PV#*.}

require cmake

SUMMARY="A collection of Bluetooth utilities and modules for KDE based on BlueZ"
DESCRIPTION="The KDE Bluetooth Framework is a set of tools built on top of
Linux' Bluetooth stack BlueZ. Our goal is to provide easy access to the most
common Bluetooth profiles and to make data exchange with Bluetooth enabled
phones and PDAs as straightforward as possible."
HOMEPAGE="http://bluetooth.kmobiletools.org/"
DOWNLOADS="mirror://sourceforge/kde-bluetooth/${MY_PNV}.tar.bz2"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
        >=kde/kdebase-workspace-4.2.0:4[bluetooth]
        kde/kdelibs:4
        x11-libs/qt:4[qt3support]
    run:
      >=net-wireless/bluez-4
        net-wireless/obex-data-server
"

WORK="${WORKBASE}"/${MY_PNV}

