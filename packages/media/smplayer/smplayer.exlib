require qmake4 sourceforge

SUMMARY="A complete front-end for MPlayer"

REMOTE_IDS+=" freshmeat:${PN}"
BUGS_TO="ingmar@exherbo.org"

LICENCES="GPL-2"
SLOT="0"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
        x11-libs/qt:4[X(+)]
    suggestion:
        x11-themes/smplayer-themes
"

if ever at_least scm; then
    DEPENDENCIES+="
    run:
        || ( media/mplayer2[ass][truetype] media/mplayer[>=1.0_rc3_p32769][ass][truetype] )
    "
else
    DEPENDENCIES+="
    run:
        media/mplayer[>=1.0_rc3_p32769][ass][truetype]
    "
fi

EQMAKE4_SOURCES=( src/${PN}.pro )
QMAKE4_SRC_CONFIGURE_PARAMS=( -o src/Makefile )
DEFAULT_SRC_COMPILE_PARAMS=( PREFIX=/usr )
DEFAULT_SRC_INSTALL_PARAMS=( PREFIX=/usr CONF_PATH="/etc/${PN}" DOC_PATH="/usr/share/doc/${PNVR}" )

