require autotools [ supported_autoconf=[ 2.5 ] supported_automake=[ 1.13 ] ]

SUMMARY="iODBC Driver Manager"
DESCRIPTION="
The iODBC Driver Manager is a free implementation of the SAG CLI and
ODBC compliant driver manager which allows developers to write ODBC
compliant applications that can connect to various databases using
appropriate backend drivers.
"
HOMEPAGE="http://www.iodbc.org"
DOWNLOADS="https://github.com/openlink/iODBC/archive/v${PV}.tar.gz -> ${PNV}.tar.gz"

LICENCES="|| ( LGPL-2 BSD-3 )"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS=""

DEPENDENCIES="
    build:
        virtual/pkg-config
"

DEFAULT_SRC_PREPARE_PATCHES=(
    -p0 "${FILES}"/${PN}-3.52.7-libdir.patch
    -p1 "${FILES}"/a9c1cd426d15206a9d66d369c7b05684fbdb8b32.patch
)
DEFAULT_SRC_CONFIGURE_PARAMS=(
    --hates=docdir
    --includedir=/usr/include/${PN}
    --with-iodbc-inidir=/etc/${PN}
    --enable-odbc3
    --enable-pthreads
    --disable-gui
    --disable-static
)

WORK=${WORKBASE}/iODBC-${PV}

