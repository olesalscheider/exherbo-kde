DOWNLOADS="mirror://sourceforge/${PN}/${PNV}.tar.bz2"

LICENCES="LGPL-2.1"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
        x11-libs/qt:4
"

WORK=${WORKBASE}/${PN}

