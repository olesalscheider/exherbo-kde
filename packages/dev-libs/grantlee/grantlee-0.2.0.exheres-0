require cmake [ api=2 ]

SUMMARY="A plugin based String Template system written using the Qt framework"
HOMEPAGE="http://www.${PN}.org"
DOWNLOADS="http://downloads.${PN}.org/${PNV}.tar.gz"

LICENCES="LGPL-2.1"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS="doc"

# Tests want to connect to a running X server
RESTRICT="test"

DEPENDENCIES="
    build:
        doc? ( app-doc/doxygen[dot] )
    build+run:
        x11-libs/qt:4[>=4.5.0][X(+)]
"

BUGS_TO="kde@exherbo.org"

src_compile() {
    default

    if option doc ; then
        emake docs
    fi
}

src_install() {
    cmake_src_install

    if option doc ; then
        insinto /usr/share/doc/${PNVR}/
        doins -r "${WORK}"/apidox
    fi
}

