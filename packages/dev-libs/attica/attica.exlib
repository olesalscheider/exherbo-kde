if ever is_scm ; then
    SCM_REPOSITORY="git://anongit.kde.org/${PN}.git"
    require scm-git
else
    DOWNLOADS="mirror://kde/stable/${PN}/${PNV}.tar.bz2"
fi

require cmake [ api=2 ]

SUMMARY="A Qt library to access the api of Open Collaboration Services servers"
HOMEPAGE="http://www.kde.org"

LICENCES="|| ( LGPL-3 LGPL-2.1 )"
SLOT="0"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
        x11-libs/qt:4
"

BUGS_TO="kde@exherbo.org"

# Tests cause a build failure in lib/tests/persontest.cpp (2012-03-23)
CMAKE_SRC_CONFIGURE_PARAMS=( -DATTICA_ENABLE_TESTS:BOOL=FALSE )

