require qmake4

SUMMARY="Qt Creator is a new cross-platform integrated development environment for use with Qt."
HOMEPAGE="http://www.qtsoftware.com/downloads/"
DOWNLOADS="http://get.qtsoftware.com/qtcreator/${PNV}-src.zip"

LICENCES="LGPL"
SLOT="0"

PLATFORMS="~amd64 ~x86"

MYOPTIONS=""

DEPENDENCIES="
    build+run:
        x11-libs/qt[>=4.5][doc]
"

BUGS_TO="kimrhh@exherbo.org"

