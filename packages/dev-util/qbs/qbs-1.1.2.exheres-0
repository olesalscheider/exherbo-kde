require qmake [ slot=5 ]

SUMMARY="Qt build suite"
HOMEPAGE="http://qt-project.org/wiki/${PN}"
DOWNLOADS="mirror://qt/official_releases/${PN}/${PV}/${PNV}.src.tar.gz"

LICENCES="LGPL-2.1"
SLOT="0"
PLATFORMS="~amd64"

DEPENDENCIES="
    build+run:
        x11-libs/qtbase:=5
        x11-libs/qtscript:=5
"

# "qbs_autotests' could not be found." Last checked 1.1.2
RESTRICT="test"

EQMAKE_PARAMS=(
    QBS_INSTALL_PREFIX=/usr
    QBS_LIB_INSTALL_DIR=/usr/${LIBDIR}
)

src_prepare() {
    # fix hardcoded libdir
    edo sed -i 's:/lib/qbs:/'"${LIBDIR}"'/qbs:' src/lib/tools/preferences.cpp
    edo sed -i 's:/lib/qbs:/'"${LIBDIR}"'/qbs:' src/plugins/plugins.pri
}

