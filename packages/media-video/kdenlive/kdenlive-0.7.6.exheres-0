require kde

SUMMARY="KDE Non Linear Video Editor"
HOMEPAGE="http://www.kdenlive.org/"
DOWNLOADS="mirror://sourceforge/${PN}/${PNV}.tar.gz"
UPSTREAM_RELEASE_NOTES="http://www.kdenlive.org/users/j-b-m/kdenlive-$(ever range 1-3)-released"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS=""

DEPENDENCIES="
    build:
        kde/kdesdk[kde_parts:scripts]
        sys-devel/gettext
    build+run:
        kde/kdebase:4 [[ note = [ Needs Nepomuk ] ]]
        media/ffmpeg
        media/mlt[>=0.4.0][ffmpeg][sdl][qt4][xml]
        x11-misc/shared-mime-info[>=0.23]
"

